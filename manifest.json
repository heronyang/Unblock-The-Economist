{

    "name": "Unblock The Economist",
    "description": "Reading articles on The Economist official website without limitation.",
    "version": "1.0",

    "permissions": [
        "tabs", "*://www.economist.com/*"
    ],

    "background": {
        "persistent": true,
        "scripts": [
            "background.js"
        ]
    },

    "browser_action": {
        "default_icon": "icon.png",
        "default_title": "Start to Unblock!"
    },

    "content_scripts": [
        {
            "matches": ["*://www.economist.com/*"],
            "css": ["style.css"],
            "js": ["jquery.js", "specific.js"],
            "run_at": "document_end"
        }
    ],

    "manifest_version": 2

}
